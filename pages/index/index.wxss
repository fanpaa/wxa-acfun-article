/**index.wxss**/

.lst {
  display: flex;
  flex-direction: column;
  padding: 25rpx 0;
  min-height: 100%;
  justify-content: space-between;
  font-size: 32rpx;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.lst-img {
  width: 150rpx;
  height: 150rpx;
}

.lst-dec {
  display: flex;
  width: 550rpx;
  height:100%;
  padding-left: 20rpx;
  flex-direction: column;
  justify-content: space-between
}

.lst-item {
  display: flex;
  flex-direction: row;
  padding: 0 25rpx 25rpx 25rpx;
}

.lst-title{
  line-height: 40rpx;
}

.lst-date{
  font-size: 24rpx;
}

.lst-info{
  font-size: 24rpx;
}

.lst-data{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
